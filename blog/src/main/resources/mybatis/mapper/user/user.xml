<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="gdut.ff.mapper.UserMapper">
    
    <resultMap id="userMap" type="gdut.ff.domain.User">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="email" property="email"/>
        <result column="birthday" property="birthday" />
        <result column="login_name" property="loginName"/>
        <result column="password" property="password"/>
        <result column="img" property="img"/>
        <result column="signature" property="signature"/>
    </resultMap>
    
    <!-- 查找全部用户 -->
    <select id="findAll" resultMap="userMap">
        SELECT *
        FROM user
    </select>
    
    <!-- 查询指定的用户 -->
    <select id="findOneById" resultMap="userMap">
        SELECT * 
        FROM user 
        WHERE id = #{id}
    </select>
    
    <!-- 保存用户 -->
    <insert id="saveUser" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user(id,name,email,birthday,login_name,password,signature,img)
        VALUES(#{id},#{name},#{email},#{birthday},#{loginName},#{password},#{signature},#{img})
    </insert>
    
    <!-- 更新用户 -->
    <update id="updateUser">
        UPDATE user 
        SET name = #{name},
            email = #{email},
            birthday = #{birthday},
            login_name = #{loginName},
            password = #{password},
            signature = #{signature},
            img = #{img}
        WHERE id = #{id}
    </update>
    
    <!-- 根据登录名或邮箱和密码登录 -->
    <select id="loginUser" resultType="gdut.ff.domain.User">
        SELECT *
        FROM user
        WHERE (login_name = #{loginName} or email = #{email}) AND password = #{password}
    </select>
    
    
    
    
</mapper>